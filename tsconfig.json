{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": [
      "node","jest"
    ],
    "skipLibCheck": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es2021",
    "rootDir": "./",
    "outDir": "./lib",
    "baseUrl": "./src",
    "removeComments": true,
    "forceConsistentCasingInFileNames":true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/","jest.config.js","tests"
  ]
}